<?xml version="1.0"?>
<robot name="my_car">
<link name="base_footprint">

</link>
<link name="base">
    <visual>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <geometry>
            <box size="1.0 0.6 0.2"/> 
        </geometry>
        <material name="blue alloy">
            <color rgba="1 0 0 0.5"/>
        </material>
    </visual>
    <collision>
        <geometry>
            <box size="1.0 0.6 0.2"/>
        </geometry>
    </collision>
    <inertial>
        <mass value="50.0"/>
        <origin xyz="0.0 0.0 0.12"/>
        <inertia ixx="1.6667" ixy="0.0" ixz="0.0"
             iyy="4.3333" iyz="0.0" 
             izz="5.6667"/>
    </inertial>
</link> 

<joint name="base_print" type="fixed">
  <parent link="base_footprint"/>
  <child link="base"/>
  <origin xyz="0.0 0.0 0.15" rpy="0.0 0.0 0.0"/>
</joint>

  <link name="front_left_wheel">
   <visual>
    <geometry>
        <cylinder length="0.1" radius="0.15"/>
    </geometry>
    <material name="steel">
        <color rgba="0.0 0.0 1 0.5"/>
    </material>
    
   </visual>
  </link>

 <joint name="front_left_wheel_joint" type="revolute">
    <parent link="base"/>
    <child link="front_left_wheel"/>
    <limit lower="-0.47" upper="0.47" effort="10" velocity="3.0"/>
    <origin xyz="0.4 0.42 0" rpy="1.57 0.0 0.0"/>
    <axis xyz="0 1 0"/>  <!--rotate around y axis-->
  </joint>

  <link name="front_left_roll">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="steel">
        <color rgba="0.0 0.0 1 0.5"/>
    </material>
    <collision>
      <mass value="5.0"/>
      <inertia ixx="0.03229" ixy="0.0" ixz="0.0"
                iyy="0.03229" iyz="0.0" 
                izz="0.05625"/>
    </collision>
    </visual>
  </link>

  <joint name="front_left_roll_joint" type="continuous">
      <parent link="front_left_wheel"/>
      <child link="front_left_roll"/>
       <origin xyz="0 0 0" rpy="0 0 0"/> 
        <axis xyz="0 0 1"/> 
  </joint>
    
 <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.15"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 1 0.5"/>
      </material>
    </visual>
  </link>

  <joint name="front_right_wheel_joint" type="revolute">
    <parent link="base"/>
    <child link="front_right_wheel"/>
    <limit lower="-0.47" upper="0.47" effort="10" velocity="3.0"/>
    <origin xyz="0.4 -0.42 0" rpy="1.57 0 0"/>
    <axis xyz="0 1 0"/> <!-- rotate around axis Y -->
  </joint>

  <link name="front_right_roll">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.15"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 1 0.5"/>
      </material>
      <collision>
      <mass value="5.0"/>
      <inertia ixx="0.03229" ixy="0.0" ixz="0.0"
                iyy="0.03229" iyz="0.0" 
                izz="0.05625"/>
    </collision>
    </visual>
  </link>

  <joint name="front_right_roll_joint" type="continuous">
    <parent link="front_right_wheel"/>
      <child link="front_right_roll"/>
       <origin xyz="0 0 0" rpy="0 0 0"/> 
        <axis xyz="0 0 1"/> 
  </joint>

   <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.15"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 1 0.8"/>
      </material>
      <collision>
      <mass value="5.0"/>
      <inertia ixx="0.03229" ixy="0.0" ixz="0.0"
                iyy="0.03229" iyz="0.0" 
                izz="0.05625"/>
    </collision>
    </visual>
  </link>

  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.4 0.42 0" rpy="1.57 0 0"/>
    <axis xyz="0 0.0 1.0"/>
  </joint>

  
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.15"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 1 0.8"/>
      </material>
      <collision>
      <mass value="5.0"/>
      <inertia ixx="0.03229" ixy="0.0" ixz="0.0"
                iyy="0.03229" iyz="0.0" 
                izz="0.05625"/>
    </collision>
    </visual>
  </link>

  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.4 -0.42 0" rpy="1.57 0 0"/>
    <axis xyz="0 0.0 1.0"/>
  </joint>
</robot>


